    "keywords": ["mysql", "db", "helper"],
    "type": "library",
    "license": "LGPL-3.0",
    "authors": [
        {
            "name": "James Dempster",
            "role": "developer"
        },
        {
            "name": "Luke Richards",
            "role": "developer"
        },
        {
            "name": "Chris Minett",
            "role": "developer"
        },
        {
            "name": "Phlib Team & Contributors",
            "homepage": "https://github.com/phlib/db-helper/contributors"
        }
    ],
    "require": {
        "php": "^8.0",
        "ext-pdo": "*",
        "phlib/db": "^2"
    },
    "autoload": {
        "psr-4": {
            "Phlib\\DbHelper\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9",
        "symplify/easy-coding-standard": "^12.1"
    },
    "autoload-dev": {
        "psr-4": {
            "Phlib\\DbHelper\\Tests\\": "tests/"
        }
    }
